{% extends 'base.html.twig' %}

{% block title %}Add Job Offer{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/formStyles.css") }}"
{% endblock %}

{% block body %}

    <div class="container">
        <img src="{{ asset('images/login.webp') }}" alt="Registration Image" class="registration-image">
        <div class="formulaire">

            <h1>Register</h1>

            {{ form_errors(job) }}

            {{ form_start(job) }}

            {{ form_row(job.position) }}
            {{ form_row(job.description) }}
            {{ form_row(job.entreprise) }}
            {{ form_row(job.location) }}
            {{ form_row(job.employment_type) }}
            <button type="submit" class="btn">Add Job Offer</button>

            {{ form_end(job) }}

        </div>
    </div>
{% endblock %}
